<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foodname"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="24dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            />

        <ImageView

            android:id="@+id/iconLocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/tvFoodName"
            />

        <TextView

            android:id="@+id/tvNamecafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restaurant"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tvFoodName"
            android:layout_toRightOf="@+id/iconLocation"
            android:textColor="#ffffff"

            />

        <ImageView

            android:id="@+id/star1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_below="@+id/tvNamecafe"
            android:layout_toLeftOf="@id/star2"

            />

        <ImageView

            android:id="@+id/star2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_below="@+id/tvNamecafe"
            android:layout_toLeftOf="@id/star3"
            />
        <ImageView
            android:id="@+id/star3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_below="@+id/tvNamecafe"
            android:layout_toLeftOf="@id/star4"
            />
        <ImageView

            android:id="@+id/star4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_below="@+id/tvNamecafe"
            android:layout_toLeftOf="@id/star5"
            />
        <ImageView

            android:id="@+id/star5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_alignRight="@id/imgView"
            android:layout_below="@+id/tvNamecafe"
            android:layout_marginRight="24dp"
            />



    </RelativeLayout>

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Detail"
        android:textSize="18dp"
        android:textColor="#000000"
        />

</LinearLayout>